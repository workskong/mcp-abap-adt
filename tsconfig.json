{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "node16",
    "moduleResolution": "Node16",
    "strict": true,
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@modelcontextprotocol/sdk/types"
    ],
    "outDir": "./dist",
    "noImplicitAny": false,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist"]
}
